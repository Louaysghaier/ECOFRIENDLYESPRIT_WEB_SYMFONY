{% extends 'base.html.twig' %}
{% block title %} List Comments {% endblock %}
{% block body %}
<section class="contact-us" id="contact">
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <table border="1">
        <div style="display: flex, align-items: center; justify-content:center">
            <thead>
                {#<th>First Name User</th>
                <th>Last name User</th>#}
                <th>Description </th>
                <th>Date of Creation</th>
                <th>Action</th>
                
            </thead>
            <tbody>
            {% for comment in c %}
            <tr>
                {#<td>{{comment.prenomUser}}</td>
                <td>{{comment.nomUser}}</td>#}
                <td>{{comment.descriptionComment}}</td>
                <td>{{ comment.dateCreationComment|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('EditComment', {'id': comment.getId()}) }}">Edit</a>
                    <a href="{{ path('Deletecomment', {'id': comment.getId()}) }}">Delete</a>
                </td>
            {# <td>
                    <a href="{{}}"
                </td> #}
            </tr>
            {% endfor %}
            </tbody>
            </div>
        </table>
    </div>
</section>
{% endblock %}