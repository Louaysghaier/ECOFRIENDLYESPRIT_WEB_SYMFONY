
{% extends 'base.html.twig' %}

{% block title %}Welcome to Bilio!{% endblock %}
{% block body %}
<section class="heading-page header-text" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h6>Welcome to Forum</h6>
          <h2>Sale & Exchange</h2>
        </div>
      </div>
    </div>
  </section>

  <section class="meetings-page" id="meetings">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <div class="filters">
                <ul>
                  <li data-filter="*"><a href="{{ path('app_adddocuments') }}">Add Document</a></li>
                </ul>
              </div>
            </div>
            {% for doc in d %}
                <div class="col-lg-12">
                    <div class="row grid">
                        <div class="col-lg-4 templatemo-item-col all soon">
                            <div class="meeting-item">
                                {#<div class="thumb">
                                    {% if doc.getImagePost() is not null %}
                                        <img src="{{ asset(post.getImagePost()) }}" alt="">
                                    {% else %}
                                        <p>No image available</p>
                                    {% endif %}
                                </div>#}
                                <div class="down-content">
                                    {#<div class="date">
                                         <h6>{{ post.getDateCreationPost().format('Y-m-d ') }}</h6>
                                    </div>#}
                                    {#<h4>{{ post.getPrenomUser() }} {{ post.getNomUser() }}</h4>#}
                                    <h4>{{ doc.getDocumentName() }}</h4>
                                  
                                    <p>{{ doc.getDocumentType() }}</p>
                                    <p>{{ doc.getNiveau() }}</p>
                                    <p>{{ doc.getSemestre() }}</p>
                                     {#<li data-filter="*"><a href="{{ path('addComment' , {'postId': doc.getId()})  }}">Add Comment</a></li>
                                     <li data-filter="*"><a href="{{ path('Readcommentfront' , {'postId': post.getId()})  }}">Read Comment</a></li>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}