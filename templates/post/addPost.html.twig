{% extends 'base.html.twig' %}
{% block title %}Add Post!{% endblock %}

{% block body %}
<section class="contact-us" id="contact">
    <div class="form-container">
    <table>

        {# Ajoutez la classe "form-container" à l'élément du formulaire #}
        {{ form_start(form, {'attr': {'class': 'form-container'}}) }}
        <div class="align">
    <tr>
        <div class="form-group">
        
            {{ form_row(form.subject) }}
        </div>
    </tr>
    <tr>
        <div class="form-group">
            
            {{ form_row(form.title) }}
        </div>
    </tr>
    <tr>
        <div class="form-group">
        
            {{ form_row(form.descriptionPost) }}
        </div>
    </tr>
        <div class="form-group">
        
            {{ form_row(form.imagePost) }}
        </div>
    </tr>
    <tr>
        <div class="form-group">
        
            {{ form_row(form.nbresComments) }}
        </div>
    </tr>
        {# Si vous avez exclu idUser du mappage, vous pouvez l'ajouter manuellement ici si nécessaire #}
        {# <div class="form-group">
            {{ form_label(form.idUser) }}
            {{ form_row(form.idUser) }}
        </div> #}

        {# Bouton de soumission #}
    <tr> 
        <div class="form-group">
            {{ form_row(form.Published) }}
        </div>
    </tr>
    </table>
        {{ form_end(form) }}
    </div>
    </div>
</section>
{% endblock %}