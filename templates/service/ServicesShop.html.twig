{% extends 'base.html.twig' %}

{% block title %}Welcome to Service Shop!{% endblock %}

{% block body %}
    <section class="heading-page header-text" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Welcome to our services</h6>
                    <h2>Check & Buy</h2>
                    <div class="btn bg-danger" style="color: white; text-decoration-color: white;">Ask our chatbot</div>
                </div>
            </div>
        </div>
    </section>

    <section class="upcoming-meetings" id="meetings">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <div class="col-lg-12">
                            <div class="filters">
                                <b>Filter now with your special choice:</b>
                                <button class="btn btn-primary" href="{{ path('app_orders_index') }}">Low Price</button>
                                <button class="btn btn-primary" href="{{ path('app_orders_index') }}">Top Rated</button>
                                <button class="btn btn-primary" href="{{ path('app_orders_index') }}">Promotion!</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="categories">
                        <h4>Your Basket </h4>
                        <ul>
                            <li><a href="#">Your Current money</a></li><br>
                            <li><a href="#">The Total Amount</a></li>
                            <li><a href="#">The Last Money To pay</a></li>
                            <li><a href="#">Number of your order</a></li>
                            <li><a href="#">Check for Promo-Code</a></li>
                        </ul>
                        <div class="main-button-red">
                            <a href="meetings.html">Finaliser votre achat</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="row">
                        <section class="meetings-page" id="meetings">
                            <div class="container">
                                <div class="col-lg-12">
                                    <div class="row">
                                        {% for service in services %}
                                            <div class="col-lg-4">
                                                <div class="meeting-item" style="width: 100%;">
                                                    <div class="thumb" style="text-align: center;">
                                                        {% if service.getImg() is not null %}
                                                            <img src="{{ asset('uploads/images/' ~ service.getImg()) }}" alt="{{ service.getServicename() }}" style="width: 100%; height: auto;">
                                                        {% else %}
                                                            <p>No image available</p>
                                                        {% endif %}
                                                    </div>
                                                    <div class="down-content">
                                                        <div class="date">
                                                            <h6>NAME OF THE SERVICE: {{ service.getServicename() }}</h6>
                                                        </div>
                                                        <h4>PRICE FOR THIS SERVICE: {{ service.getPrice() }}</h4>
                                                        <button class="btn btn-primary" onclick="addToOrder({{ service.getServiceid() }})">Add me!</button>
                                                        <a href="{{ path('app_orders_index') }}" class="btn">Learn More</a>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
                                        <script>
                                            function addToOrder(serviceId) {
                                                // Send an AJAX request to your Symfony controller
                                                $.ajax({
                                                    url: "{{ path('add_to_order') }}",
                                                    method: "POST",
                                                    data: { serviceId: serviceId },
                                                    success: function(response) {
                                                        alert("Service added to order!");  // You can handle the response as needed
                                                    },
                                                    error: function(error) {
                                                        console.error("Error adding service to order:", error);
                                                    }
                                                });
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
