                                        <script>
                                            function addToOrder(serviceId) {
                                                // Send an AJAX request to your Symfony controller
                                                $.ajax({
                                                    url: "{{ path('add_to_order') }}",
                                                    method: "POST",
                                                    data: { serviceId: serviceId },
                                                    
                                                    success: function(response) {
                                                        alert("Service added to order!");  // You can handle the response as needed
                                                    },
                                                    error: function(error) {
                                                        console.error("Error adding service to order:", error);
                                                    }
                                                });
                                            }
                                        </script>
                                        <script>
                                            $(document).ready(function () {
                                                $('#search-form').on('submit', function (e) {
                                                    e.preventDefault();

                                                    // Get the input value
                                                    var serviceName = $('#search-input').val();

                                                    // Make an AJAX request
                                                    $.ajax({
                                                        url: "{{ path('search') }}",
                                                        method: "GET",
                                                        data: { serviceName: serviceName },
                                                        dataType: 'html',
                                                        success: function (response) {
                                                            // Replace the content with the new card
                                                            $('#search-results').html(response);
                                                            if (response.message) {
                                                                // Display a pop-up with the message
                                                                alert(response.message);
                                                            }
                                                        },
