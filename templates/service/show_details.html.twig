{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}
        {% block javascripts %}
        
            {% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/show_details.css') }}">

<section class="heading-page header-text" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Do You Want To Know more About US ?</h6>
                    <h2>Ask  & Answer</h2>
                    <div class="btn bg-danger" style="color: white; text-decoration-color: white;">Contact Us For Feedbacks !</div>
                </div>
            </div>
        </div>
    </section>    
<section class="upcoming-meetings" id="meetings">

    <section class="form-container" id="contact">

        <h1>Service</h1>

        <div class="row">
            <!-- Left column for card (half of the page) -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Service number</th>
                                    <td>{{ service.serviceid }}</td>
                                </tr>
                                <tr>
                                    <th>Servicename</th>
                                    <td>{{ service.servicename }}</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>{{ service.price }}</td>
                                </tr>
                                <tr>
                                    <th>Service Image</th>
                                    <td>
                                        {% if service.img %}
                                            <img src="{{ asset('uploads/images/' ~ service.img) }}" alt="Service Image" class="img-fluid">
                                        {% else %}
                                            No Image
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="button-group">
                            <a href="{{ path('app_service_shop') }}" class="btn bg-warning">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right column for image, text, and button -->
            <div class="col-md-6">
                <div class="image-text-container">
                    <!-- Add your image here -->
                    <img src="path/to/your/image.jpg" alt="Description" class="img-fluid">
                    
                    <!-- Add your text here -->
                    <p>Your text goes here...</p>
                    
                    <!-- Add your button here -->
                    <a href="#" class="btn btn-primary">Your Button</a>
                </div>
            </div>
        </div>

    </section>
</section>
 
{% endblock %}
